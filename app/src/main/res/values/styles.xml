<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="templateToast">
        <item name="colorBackground">#6C5E60</item>
        <item name="textColor">#fff</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">1dp</item>
        <item name="length">SHORT</item>
        <item name="cornerRadius">3dp</item>
    </style>
    <style name="template_G">
        <item name="colorBackground">#01FF5C</item>
        <item name="textColor">#000</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">3dp</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">20dp</item>
    </style>
    <style name="template_P">
        <item name="colorBackground">#FF0125</item>
        <item name="textColor">#fff</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">3dp</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">20dp</item>
    </style>

</resources>
